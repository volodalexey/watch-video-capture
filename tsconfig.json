{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "module": "es6",
    "target": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
