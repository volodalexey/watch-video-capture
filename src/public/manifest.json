{
  "name": "Watch Video & Capture",
  "description": "Watch any video and capture it",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "scripts": ["/background.bundle.js"],
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "/popup/index.html",
    "default_icon": {
      "16": "/images/icon16.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png"
  },
  "options_page": "/options/index.html",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "/content.bundle.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/inject.bundle.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}